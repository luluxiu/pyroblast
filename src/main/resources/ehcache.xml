<ehcache>
    <diskStore path="java.io.tmpdir/Tmp_Ehcache" />

    <defaultCache maxElementsInMemory="10000" eternal="false"
                  overflowToDisk="false" timeToIdleSeconds="0" timeToLiveSeconds="0"
                  diskPersistent="false" diskExpiryThreadIntervalSeconds="120" />

    <cache name="cache.rule" maxElementsInMemory="20" eternal="false"
           overflowToDisk="true" timeToIdleSeconds="300" timeToLiveSeconds="1800"/>

    <cache name="cache.group" maxElementsInMemory="20" eternal="false"
           overflowToDisk="true" timeToIdleSeconds="300" timeToLiveSeconds="1800"/>

    <cache name="cache.ap" maxElementsInMemory="200" eternal="false"
           overflowToDisk="true" timeToIdleSeconds="300" timeToLiveSeconds="1800"/>

    <cache name="cache.pyrouser" maxElementsInMemory="20" eternal="false"
           overflowToDisk="true" timeToIdleSeconds="300" timeToLiveSeconds="1800"/>

    <cache name="cache.token" maxElementsInMemory="1000" eternal="false"
           overflowToDisk="true" timeToIdleSeconds="180" timeToLiveSeconds="180"/>
</ehcache>